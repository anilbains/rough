<div class="row">
  <% for group in @groups %>
    <div class="col-sm-4 col-sm-4 col-sm-4">
       <% if FileTest.exist?(Rails.root.join("public", "images", "#{group.id}.jpg"))  %>
          <div class="thumbnail">
          <%= link_to image_tag("#{group.id}.jpg", width: "350px"), group_path(group.id) %>
                
          <div class="caption">
            <%= link_to group.name, group_path(group.id) %> <br>

            <%= link_to "Edit",edit_group_path(group.id), class: "btn btn-default" %>
            <%= link_to "Delete", group_path(group.id), method: :delete, class: "btn btn-default" %><br>
          </div>
        </div><br>
      <% else %>
        

      <% end %>

      
    </div>
  <% end %>
</div>



<%= link_to "New User Group", new_group_path, class: "btn btn-success" %>
