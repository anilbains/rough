<div class="row">
  
  <div class="col-md-6 col-md-offset-3">
    <%= link_to "Create a new User Profile", new_user_path, class: 'btn btn-success btn-lg btn-block' %> <br>
  </div>

  <% for user in @users %>
    
       <% if FileTest.exist?(Rails.root.join("public","images", "userphotos", "#{user.id}.jpg"))  %>
          <div class="col-md-4">
            <div class="thumbnail" style="background-color:#5ac88e;">
              <%= link_to image_tag("userphotos/#{user.id}.jpg", style: "width:350px", style:"height:350px" ), user_path(user.id) %>
                  
              <div class="caption">
                <%= link_to user.firstname + " " + user.lastname, user_path(user.id) %> <br>

                <%= link_to "Edit",edit_user_path(user.id), class: "btn btn-default" %>
                <%= link_to "Delete", user_path(user.id), method: :delete, class: "btn btn-default" %><br>
              </div>
            </div><br>
          </div>
      <% else %>
        

      <% end %>
   
    
  <% end %>



</div>




















